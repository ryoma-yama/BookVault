{
  "name": "my-remix-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy:app": "pnpm run build && wrangler pages deploy",
    "dev": "remix vite:dev",
    "format": "biome format . --write",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types",
    "preview": "pnpm run build && wrangler pages dev",
    "cf-typegen": "wrangler types",
    "migrate:generate": "drizzle-kit generate",
    "migrate:local": "wrangler d1 migrations apply development-db-vault --local",
    "migrate:prod": "wrangler d1 migrations apply development-db-vault --remote",
    "seed:local": "wrangler d1 execute development-db-vault --local --file=seed.sql",
    "seed:prod": "wrangler d1 execute development-db-vault --remote --file=seed.sql"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-navigation-menu": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.0",
    "@remix-run/cloudflare": "^2.15.3",
    "@remix-run/cloudflare-pages": "^2.15.3",
    "@remix-run/react": "^2.15.3",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.5",
    "drizzle-orm": "^0.41.0",
    "html5-qrcode": "^2.3.8",
    "isbot": "^4.1.0",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.501.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "turndown": "^7.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.3",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "drizzle-kit": "^0.30.6",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1",
    "wrangler": "4.10.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
